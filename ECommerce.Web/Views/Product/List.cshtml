@using ECommerce.DTOs.Product
@model List<ProductListDto>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4">Ürünler</h2>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="/@product.CoverImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Price.ToString("C")</p>
                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id" class="btn btn-outline-dark w-100">
                            Detay
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
