@using ECommerce.DTOs.Product
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - webADGL</title>

    <link rel="stylesheet" href="~/template/assets/css/bootstrap.min.css" />
