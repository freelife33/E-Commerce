@{
    ViewData["Title"] = "OrderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ECommerce.Web.Models.Order;
@model OrderDetailViewModel


<div class="container container-240">
    <div class="myaccount">
        <div class="row flex pd">
            <div class="account-element bd-7" style="margin:auto">
                <div class="cmt-title text-center abs">
                    <h1 class="page-title v1">Sipariş Detayınız- #@Model.OrderId</h1>
                </div>
                <div class="page-content"> 

                    <p><strong>Tarih:</strong> @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>
                    <p><strong>Durum:</strong> @Model.Status</p>
                    <p><strong>Adres:</strong> @Model.ShippingAddress</p>
                    <p><strong>Toplam Tutar:</strong> @Model.TotalAmount ₺</p>

                    <hr />

                    <h4>Ürünler</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Ürün</th>
                                <th>Adet</th>
                                <th>Birim Fiyat</th>
                                <th>Toplam</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice ₺</td>
                                    <td>@item.Total ₺</td>
                                </tr>
                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>