@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ECommerce.Web.Models.Auth;
@model UserProfileViewModel

<div class="container container-240">
    <div class="row flex pd">
        <div class="account-element bd-7">
            <div class="cmt-title text-center abs">
                <h1 class="page-title v1">Profil Bilgileriniz</h1>
            </div>
            <div class="page-conten ">


        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="Profile" method="post">
            <div class="form-group">
                <label asp-for="FullName">Adınız Soyadınız</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
               <input type="hidden" name="Email" value="@Model.Email" />
                <input asp-for="Email" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">Telefon Numarası</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address">Adres</label>
                <textarea asp-for="Address" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
                    <div class="myaccount">
                        <button type="submit" class="btn btn-submit btn-gradient">Bilgilerimi Güncelle</button>
            </div>
        </form>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
