
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ECommerce.Web.Models.Auth;
@model LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container container-240">
    <div class="myaccount">

        <div class="row flex pd">
            <div class="account-element bd-7" style="margin:auto">
                <div class="cmt-title text-center abs">
                    <h1 class="page-title v1">Giriş</h1>
                </div>
                <div class="page-content">
                    <p>Hesabınıza giriş yapın</p>
                    <form asp-action="Login" method="post" class="login-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Email">Email  <span class="f-red">*</span></label>
                            <input asp-for="Email" class="form-control bdr" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password">Şifre  <span class="f-red">*</span></label>
                            <input asp-for="Password" class="form-control bdr" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="flex lr">
                            <button type="submit" class="btn btn-submit btn-gradient">Giriş</button>
                            <div class="checkbox checkbox-default">
                                <input id="remember" type="checkbox" value="yes" class="">
                                <label for="remember"><span class="chk-span" tabindex="2"></span>Remember me</label>
                            </div>
                        </div>
                    </form>
                    <a href="#" class="btn-lostpwd spc">Şifremi unuttum</a>
                    <a href="Account/Register" class="btn-lostpwd spc">Kayıt Ol</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
