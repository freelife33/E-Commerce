@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ECommerce.Web.Models.Auth;
@model RegisterViewModel

<div class="container container-240">
    <div class="myaccount">

        <div class="row flex pd">
            <div class="account-element bd-7" style="margin:auto">
                <div class="cmt-title text-center abs">
                    <h1 class="page-title v1">Kayıt Ol</h1>
                </div>
                <div class="page-content">
                    <p>Kendi hesabınızı oluşturun</p>
                    <form asp-action="Register" method="post" class="login-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="UserName">Kullanıcı Adı  <span class="f-red">*</span></label>
                            <input asp-for="UserName" class="form-control bdr" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email">Email  <span class="f-red">*</span></label>
                            <input asp-for="Email" class="form-control bdr" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password">Şifre  <span class="f-red">*</span></label>
                            <input asp-for="Password" class="form-control bdr" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword"> Şifre Tekrarı  <span class="f-red">*</span></label>
                            <input asp-for="ConfirmPassword" class="form-control bdr" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="flex lr">
                            <button type="submit" class="btn btn-submit btn-gradient">Kayıt Ol</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

