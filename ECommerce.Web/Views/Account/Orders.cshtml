@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ECommerce.Web.Models.Order;
@model List<OrderListViewModel>


<div class="container container-240">
    <div class="myaccount">
        <div class="row flex pd">
            <div class="account-element bd-7" style="margin:auto">
                <div class="cmt-title text-center abs">
                    <h1 class="page-title v1">Sipariş Geçmişiniz</h1>
                </div>
                <div class="page-content">

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">Henüz hiç siparişiniz bulunmamaktadır.</div>
                    }
                    else
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Tarih</th>
                                    <th>Tutar</th>
                                    <th>Durum</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.OrderId</td>
                                        <td>@order.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@order.TotalAmount ₺</td>
                                        <td>@order.Status</td>
                                        <td>
                                            <a asp-controller="Account" asp-action="OrderDetails" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">Detay</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
