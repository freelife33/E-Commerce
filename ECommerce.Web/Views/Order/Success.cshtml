@{
    ViewData["Title"] = "Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container container-240">
    <div class="card p-3">
        <div class="row flex pd">
            <div class="col-md-10" style="margin:auto">
                <div class="cmt-title text-center abs">
                    <h1 class="page-title v1 bg-success">Başarılı</h1>
                </div>
                <div class="page-content" style="margin:auto">
                   
                    <span class="text-success fw-bold fs-5">Tebrikler, siparişiniz başarıyla alındı!</span> <br />
                    <span class="text-muted">Sipariş numaranız: <strong>@ViewBag.OrderNumber</strong></span> <hr />
                    <span class="text-danger fw-bold fs-5">Banka havalesi/EFT işlemi sırasında açıklama kısmına sipariş numaranızı yazmayı unutmayınız.</span> <br />
                    <span class="text-danger fw-bold fs-5">Ödemeniz onaylandıktan sonra siparişiniz hazırlanacak ve en kısa sürede kargoya verilecektir.</span> <br />
                </div>
            </div>
        </div>
    </div>
</div>